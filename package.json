{
  "name": "ant-extensions",
  "version": "0.0.0",
  "description": "Ant React Extensions",
  "author": "Adarsh Pastakia <adarshpastakia@outlook.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "modules/*"
  ],
  "devDependencies": {
    "@storybook/addon-actions": "^5.3.18",
    "@storybook/addon-contexts": "^5.3.18",
    "@storybook/addon-docs": "^5.3.18",
    "@storybook/addon-jest": "^5.3.18",
    "@storybook/addon-knobs": "^5.3.18",
    "@storybook/addon-links": "^5.3.18",
    "@storybook/addon-options": "^5.3.18",
    "@storybook/addon-storysource": "^5.3.18",
    "@storybook/addons": "^5.3.18",
    "@storybook/cli": "^5.3.18",
    "@storybook/preset-ant-design": "^0.0.1",
    "@storybook/preset-create-react-app": "^2.1.1",
    "@storybook/react": "^5.3.18",
    "@storybook/theming": "^5.3.18",
    "@testing-library/react": "^10.0.3",
    "@types/jest": "^25.2.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/storybook__addon-actions": "^5.2.1",
    "@types/storybook__addon-knobs": "^5.2.1",
    "@types/storybook__addon-links": "^5.2.1",
    "@types/storybook__addon-options": "^5.2.1",
    "@types/storybook__addons": "^5.2.1",
    "@types/storybook__react": "^5.2.1",
    "@types/testing-library__react": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "i18next-browser-languagedetector": "^4.1.1",
    "jest": "^25.4.0",
    "jest-transform-stub": "^2.0.0",
    "lerna": "^3.20.2",
    "less-loader": "^5.0.0",
    "less-plugin-npm-import": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-scripts": "^3.4.1",
    "storybook-addon-specifications": "^2.1.5",
    "storybook-dark-mode": "^0.4.1",
    "stylelint": "^13.3.2",
    "stylelint-order": "^4.0.0",
    "stylelint-prettier": "^1.1.2",
    "ts-jest": "^25.3.1",
    "ts-loader": "^7.0.0",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "@ant-design/icons": "^4.0.6",
    "antd": "^4.1.4",
    "i18next": "^19.4.2",
    "i18next-browser-languagedetector": "^4.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-i18next": "^11.3.4"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json"
      }
    },
    "transform": {
      "\\.(js|jsx|ts|tsx)$": "ts-jest",
      "\\.svg$": "jest-transform-stub"
    },
    "modulePaths": [
      "<rootDir>/modules",
      "<rootDir>/node_modules"
    ],
    "collectCoverageFrom": [
      "modules/**/src/**/*.{ts,tsx}",
      "!**/*.d.ts",
      "!**/*.test.{js,ts,tsx}",
      "!**/*.stories.{js,ts,tsx}",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "start:storybook": "start-storybook -p 6003",
    "start:lerna": "lerna run start --stream",
    "start:test": "yarn build:test --watch",
    "start": "npm-run-all -c --parallel start:lerna start:test start:storybook",
    "prebuild": "lerna run build --stream",
    "build:lib": "lerna run build:lib --stream",
    "build:style": "lerna run build:style --stream",
    "build:test": "yarn run:test --json --outputFile=./.storybook/jest-test-results.json",
    "build": "build-storybook -o ./build",
    "dist": "lerna run dist --stream",
    "postdist": "lerna version patch --no-git-tag-version --no-push --tag-version-prefix='' --yes",
    "run:test": "jest --ci --runInBand --verbose --detectOpenHandles",
    "test:lint": "eslint --fix --ext=ts,tsx .",
    "test:typecheck": "tsc -p tsconfig.test.json",
    "test": "npm-run-all test:lint test:typecheck run:test"
  }
}
